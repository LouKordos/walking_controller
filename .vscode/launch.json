{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "CMake build and debug main file",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/src/build/${fileBasenameNoExtension}",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/src/build/",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "Build Debug using CMake",
        "miDebuggerPath": "/usr/bin/gdb"
      }
    ]
  }